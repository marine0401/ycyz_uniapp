.mask {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 9999;
  transition: background 0.3s linear;
  display: flex;
  align-items: center;
  opacity: 0;
  visibility: hidden;
  justify-content: center;
}
.mask.mask-show {
  visibility: visible;
  opacity: 1;
}
.hover {
  background: #f2f2f2;
}
.default-view {
  width: 600rpx;
  font-weight: 400;
  font-size: 18px;
  background-color: #fff;
  border-radius: 6rpx;
}
.default-view .title {
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.default-view .content {
  padding: 40rpx 48rpx;
  min-height: 40px;
  font-size: 15px;
  line-height: 1.4;
  color: #999;
  text-align: center;
}
.default-view .btn {
  height: 100rpx;
  display: flex;
  flex-direction: row;
  border-top: 1px solid #ccc;
}
.default-view .btn .cancel {
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
  border-right: 1px solid #ccc;
}
.default-view .btn .confirm {
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
  color: #007aff;
}
.select-view {
